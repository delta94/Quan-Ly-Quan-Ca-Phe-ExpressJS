extends ../layouts/_layout_main_bootstrap

block custom_stylesheets
    link(type="text/css", rel="stylesheet", href="/stylesheets/admin-main.css")

block content
    #layoutAuthentication
        #layoutAuthentication_content
            main
                .container
                    .row.justify-content-center
                        .col-lg-5
                            .card.shadow-lg.border-0.rounded-lg.mt-5
                                .card-header
                                    h3.text-center.font-weight-light.my-4 Quên mật khẩu 
                                .card-body
                                    form(action='/login/forgot-password', method='POST')
                                        .form-group
                                            label.small.mb-1(for='inputUsername') Tên đăng nhập 
                                            input#inputUsername.form-control.py-4(type='text', placeholder='Nhập tên đang nhập của bạn ')
                                            .form-group.d-flex.align-items-center.justify-content-between.mt-4.mb-0
                                                a.small(href='/login/login') Đăng nhập 
                                                input.btn.btn-primary(type='submit', name='Login', value='Cài lại mật khẩu')  
                                .card-footer.text-center
                                    .small
                                        a(href='/') Trang chủ   


block custom_javascripts
    script(type="text/javascript", src="/javascripts/admin-main.js")
