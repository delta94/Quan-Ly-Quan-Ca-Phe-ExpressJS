extends ../layouts/_layout_main_bootstrap

block custom_stylesheets
    link(type="text/css", rel="stylesheet", href="/stylesheets/admin-main.css")

block content
    #layoutAuthentication
        #layoutAuthentication_content
            main
                .container
                    .row.justify-content-center
                        .col-lg-5
                            .card.shadow-lg.border-0.rounded-lg.mt-5
                                .card-header
                                    h3.text-center.font-weight-light.my-4 Đăng nhập 
                                .card-body
                                    form(action='/login/login', method='POST')
                                        .form-group
                                            label.small.mb-1(for='inputUsername') Tên đăng nhập 
                                            input#inputUsername.form-control.py-4(type='text', placeholder='Nhập tên đang nhập của bạn ')
                                        .form-group
                                            label.small.mb-1(for='inputPassword') Mật khẩu 
                                            input#inputPassword.form-control.py-4(type='password', placeholder='Nhập mật khẩu của bạn ')
                                        .form-group
                                            .custom-control.custom-checkbox
                                                input#rememberPasswordCheck.custom-control-input(type='checkbox')
                                                label.custom-control-label(for='rememberPasswordCheck') Ghi nhớ mật khẩu 
                                        .form-group.d-flex.align-items-center.justify-content-between.mt-4.mb-0
                                            a.small(href='/login/forgot-password') Quên mật khẩu 
                                            input.btn.btn-primary(type='submit', name='Login', value='Đăng nhập')  
                                .card-footer.text-center
                                    .small
                                        a(href='/') Trang chủ 


block custom_javascripts    
    script(type="text/javascript", src="/javascripts/admin-main.js")
