
// Model thêm tài khoản
#modelThemTaikhoan.modal.fade(tabindex='-1', role='dialog', aria-labelledby='Model aria-labelledby', aria-hidden='true')
    .modal-dialog.modal-dialog-centered(role='document')
        form.modal-content
            .modal-header
                h5.modal-title Thêm tài khoản 
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') &times;
            .modal-body
                .alerts
                    // Các alert của phần này



                .form-group
                    label.small.mb-1(for='tendangnhap') Đăng nhập  
                    input#tendangnhap(type='string', class='form-control py-4 tendangnhap' , placeholder='Nhập Đăng nhập', required)
                .form-group
                    label.small.mb-1(for='matkhau') Mật khẩu  
                    input#matkhau(type='string', class='form-control py-4 matkhau' , placeholder='Nhập Mật khẩu', required)
                .form-group
                    label.small.mb-1(for='loai') Loại tài khoản  
                    input#loai(type='string', class='form-control py-4 loai' , placeholder='Nhập Loại tài khoản', required)
            .modal-footer
                input.confirm.btn.btn-outline-secondary.rounded-0(type='button', value='Thêm Tài khoản')
                input.btn.btn-outline-dark.rounded-0(type='reset', value='Cài lại')
