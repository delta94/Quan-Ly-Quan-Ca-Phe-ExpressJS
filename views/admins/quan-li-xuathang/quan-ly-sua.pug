
// Model sửa xuất hàng
#modelSuaxuathang.modal.fade(tabindex='-1', role='dialog', aria-labelledby='ModelSuaxuathang aria-labelledby', aria-hidden='true')
    .modal-dialog.modal-dialog-centered(role='document')
        form.modal-content
            .modal-header
                h5.modal-title Sửa xuất hàng 
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') &times;
            .modal-body                
                .alerts
                    // Các alert của phần này
                input.idxuathang(type='hidden')

                .form-group
                    label.small.mb-1(for='maxuathang') mxuthng  
                    input#maxuathang(type='int', class='form-control py-4 maxuathang' , required, placeholder='Nhập mxuthng')

                .form-group
                    label.small.mb-1(for='ngaygioxuat') ngygixut  
                    input#ngaygioxuat(type='datetime', class='form-control py-4 ngaygioxuat' , placeholder='Nhập ngygixut', required)
                .form-group
                    label.small.mb-1(for='manhanvien') mnhnvin  
                    input#manhanvien(type='int', class='form-control py-4 manhanvien' , placeholder='Nhập mnhnvin', required)
                .form-group
                    label.small.mb-1(for='makhachhang') mkhchhng  
                    input#makhachhang(type='int', class='form-control py-4 makhachhang' , placeholder='Nhập mkhchhng', required)
                .form-group
                    label.small.mb-1(for='maban') mbn  
                    input#maban(type='int', class='form-control py-4 maban' , placeholder='Nhập mbn', required)
                .form-group
                    label.small.mb-1(for='ghichu') ghich  
                    input#ghichu(type='int', class='form-control py-4 ghichu' , placeholder='Nhập ghich', )
            .modal-footer
                input.confirm.btn.btn-outline-secondary.rounded-0(type='button', value='Sửa xuthng')
                input.btn.btn-outline-dark.rounded-0(type='reset', value='Cài lại')
