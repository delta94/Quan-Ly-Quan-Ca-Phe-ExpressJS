
// Model sửa nhập hàng
#modelSuaNhaphang.modal.fade(tabindex='-1', role='dialog', aria-labelledby='ModelSuaNhaphang aria-labelledby', aria-hidden='true')
    .modal-dialog.modal-dialog-centered(role='document')
        form.modal-content
            .modal-header
                h5.modal-title Sửa nhập hàng 
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') &times;
            .modal-body                
                .alerts
                    // Các alert của phần này
                input.idNhaphang(type='hidden')

                .form-group
                    label.small.mb-1(for='manhaphang') Mã nhập hàng  
                    input#manhaphang(type='int', class='form-control py-4 manhaphang' , required='true', placeholder='Nhập Mã nhập hàng')

                .form-group
                    label.small.mb-1(for='manguonsanpham') Mã nguồn sản phẩm  
                    input#manguonsanpham(type='int', class='form-control py-4 manguonsanpham' , placeholder='Nhập Mã nguồn sản phẩm', required)
                .form-group
                    label.small.mb-1(for='ngaygionhap') Ngày giờ nhập  
                    input#ngaygionhap(type='datetime', class='form-control py-4 ngaygionhap' , placeholder='Nhập Ngày giờ nhập', required)
                .form-group
                    label.small.mb-1(for='manhanvien') Mã nhân viên  
                    input#manhanvien(type='int', class='form-control py-4 manhanvien' , placeholder='Nhập Mã nhân viên', required)
                .form-group
                    label.small.mb-1(for='ghichu') Ghi chú  
                    input#ghichu(type='string', class='form-control py-4 ghichu' , placeholder='Nhập Ghi chú', )
            .modal-footer
                input.confirm.btn.btn-outline-secondary.rounded-0(type='button', value='Sửa Nhập hàng')
                input.btn.btn-outline-dark.rounded-0(type='reset', value='Cài lại')
