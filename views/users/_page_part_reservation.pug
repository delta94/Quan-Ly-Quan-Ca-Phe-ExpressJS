#userReservation
    .background-image
    .container.d-flex.flex-column
        .mt-md-5.pt-md-5.text-center
            .display-4 Đặt trước 
            ul.nav.nav-tabs.justify-content-center.align-items-center
                li.nav-item
                    a.nav-link.active.lead(data-toggle='tab', href='#DatTruocBan') Đặt trước bàn 
                li.nav-item
                    a.nav-link.lead(data-toggle='tab', href='#DatMonAn') Món ăn 

        .tab-content.flex-grow-1
            #DatTruocBan.tab-pane.active.h-100
                form.d-flex.flex-column.justify-content-center.align-items-center.h-100(method='POST', action='#')                    
                    .row
                        span.input-group.col-12.col-md-6.col-lg-4.my-3
                            input.input-action.flex-grow-1(type='text', name='ten', value='', placeholder='Nhập Tên', required)
                            span.input-icon
                                i.fa.fa-user

                        span.input-group.col-12.col-md-6.col-lg-4.my-3
                            input.input-action.flex-grow-1(type='text', name='sdt', value='', placeholder='Nhập Số điện thoại ', required)
                            span.input-icon
                                i.fa.fa-mobile-alt 

                        span.input-group.col-12.col-md-6.col-lg-4.my-3
                            input.input-action.flex-grow-1(type='email', name='email', value='', placeholder='Nhập Email ', required)
                            span.input-icon
                                i.fa.fa-envelope

                        span.input-group.col-12.col-md-6.col-lg-4.my-3
                            input.input-action.flex-grow-1(type='date', name='date', value='', placeholder='Nhập Ngày tháng ', required)
                            span.input-icon
                                i.fa.fa-calendar-alt 

                        span.input-group.col-12.col-md-6.col-lg-4.my-3
                            input.input-action.flex-grow-1(type='time', name='time', step='1', value='', placeholder='Nhập Thời gian ', required)
                            span.input-icon
                                i.fa.fa-calendar-alt 

                        span.input-group.col-12.col-md-6.col-lg-4.my-3
                            select.input-action.flex-grow-1(name='time', value='', placeholder='Chọn bàn ', required)
                                - for(let i=0; i<10; i+=1) 
                                    option(value=i) Bàn số #{i}
                            span.input-icon
                                i.fa.fa-calendar-alt 

                    .row.justify-content-center.align-items-center
                        input.btn.btn-dark.px-5.mx-1(type='button', name='submit', value='Đặt bàn')
                        input.btn.btn-dark.px-5.mx-1(type='reset', name='reset', value='Cài lại')
            
            #DatMonAn.tab-pane.h-100
                // Model thêm sản phẩm đặt trước 
                #modelThemSanPham.modal.fade(tabindex='-1', role='dialog', aria-labelledby='Model thêm sản phẩm đặt trước ', aria-hidden='true')
                    .modal-dialog.modal-dialog-centered(role='document')
                        form.modal-content.rounded-0
                            .modal-header
                                h5.modal-title Thêm sản phẩm đặt trrước 
                                button.close(type='button', data-dismiss='modal', aria-label='Close')
                                    span(aria-hidden='true') &times;        
                            .modal-body
                                .form-group
                                    label Chọn sản phẩm 
                                    select.form-control
                                        option Cà phê 
                                .form-group
                                    label Chọn số lượng sản phẩm 
                                    input.form-control(type='number', name='number', value='1', min='1', step='1', placeholder='Nhập Số lượng ', required)
                            .modal-footer
                                button.btn.btn-outline-secondary(type='button') Thêm sản phẩm 
                                input.btn.btn-outline-dark(type='reset', value='Cài lại')  

                //Form thêm sản phẩm đặt trước
                form.d-flex.flex-column.justify-content-center.align-items-center.h-100(method='POST', action='#')
                    .row
                        span.input-group.col-12.col-md-6.col-lg-4.my-3
                            input.input-action.flex-grow-1(type='text', name='ten', value='', placeholder='Nhập Tên', required)
                            span.input-icon
                                i.fa.fa-user

                        span.input-group.col-12.col-md-6.col-lg-4.my-3
                            input.input-action.flex-grow-1(type='text', name='sdt', value='', placeholder='Nhập Số điện thoại ', required)
                            span.input-icon
                                i.fa.fa-mobile-alt 

                        span.input-group.col-12.col-md-6.col-lg-4.my-3
                            input.input-action.flex-grow-1(type='email', name='email', value='', placeholder='Nhập Email ', required)
                            span.input-icon
                                i.fa.fa-envelope
                    
                    .row.my-3.justify-content-center.align-items-center
                        span.col-12.d-flex.flex-column.align-items-center.mx-0.overflow-auto
                            - for (let i=0; i<10; i+=1)
                                span.input-group.row.mx-0.p-0.my-3
                                    span.col-12.col-lg-8.d-flex.mx-0.px-0
                                        span.input-action.flex-grow-1 Cà phê Capuchino
                                        span.input-action 12000
                                    span.col-12.col-lg-4.d-flex.mx-0.px-0
                                        input.input-action.flex-grow-1(type='number', name='number', value='1', min='1', step='1', placeholder='Nhập Số lượng ', required)
                                        button.btn.rounded-0.input-icon(type='button')
                                            i.fa.fa-trash

                        span.input-group.col-12.row.mx-0
                            span.col-12.col-md-8.d-flex.p-0
                                span.input-action Tổng tiền 
                                span.input-action.flex-grow-1 12000
                            button.btn.btn-outline-light.rounded-0.col-12.col-md-4(type='button',  data-toggle='modal', data-target='#modelThemSanPham') Thêm sản phẩm 
                                
                    .row.justify-content-center.align-items-center.my-3
                        input.btn.btn-dark.px-5.mx-1(type='button', name='submit', value='Đặt món')
                        input.btn.btn-dark.px-5.mx-1(type='reset', name='reset', value='Cài lại')
